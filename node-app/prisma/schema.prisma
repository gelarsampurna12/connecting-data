generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"      // âœ… ini yang benar
  url      = env("DATABASE_URL")
}

model Siswa {
  id          Int      @id @default(autoincrement())
  nama        String
  nilai       Float
  kehadiran   Float
  potensi     String
  file        String
  uploaded_at DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Dokumen {
  id          Int       @id @default(autoincrement())
  nama        String
  kategori    String
  subkategori String?
  nama_file   String?
  path        String
  tipe_file   String?
  uploaded_at DateTime  @default(now())

  // FOLDER SUPPORT
  parent_id   Int? 
  parent      Dokumen? @relation("FolderParent", fields: [parent_id], references: [id])
  children    Dokumen[] @relation("FolderParent")
}





